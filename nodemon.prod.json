{
   "watch": ["src"],
   "ext": "ts",
   "ignore": ["src/public"],
   "exec": "node --inspect -r ts-node/register  -r tsconfig-paths/register ./src  --env=production",
   "exec2": "node --inspect -r ts-node/register  -r tsconfig-paths/register ./src  --env=production --env2=development",
   "env": {
      "TS_NODE_FILES": "true"
   }
}
